#include<stdio.h>

int main()
{
	char A[100];
	int i=0,j=1,k=0;
	printf("请输入字符串：\n");
	gets(A);

	if(A[i]>='0'&&A[i]<='9')
	{
	    for(i=0;A[i]>='0'&&A[i]<='9';i++)
		{
			if(A[i+1]=='>'||A[i+1]=='<'||A[i+1]=='=')			
			{
				j=i+2;
			}						
		}
        if(j==1)
		printf("语法错误，字符串没有判断符号\n");
		else
		printf("语法正确，在第%d列为判断符号\n",j);
		        k=j;
                while(A[k]!=';')
                {
                	k++;
				}
			    if(k>=99)
			    printf("语法错误，字符串没有英文分号\n");
			    else
			    printf("语法正确，在第%d列为英文分号\n",k+1);
   
    }
	else
    {
	    printf("语法错误，字符串没有第一部分自然数\n");
    }
}
